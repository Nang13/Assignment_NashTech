@page
@model PES.UI.Pages.Authen.ForgetPasswordModel
@{
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f8e2;
    }

    .forgot-password-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .forgot-password-container h2 {
            color: #2d3436;
            margin-bottom: 20px;
        }

        .forgot-password-container p {
            color: #636e72;
            margin-bottom: 30px;
        }

        .forgot-password-container .btn {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

            .forgot-password-container .btn:hover {
                background-color: #218838;
            }

        .forgot-password-container .back-to-login {
            display: block;
            margin-top: 20px;
            color: #28a745;
        }

            .forgot-password-container .back-to-login:hover {
                text-decoration: underline;
            }

    .organic-logo {
        width: 80px;
        height: 80px;
        margin-bottom: 20px;
    }
</style>
<body>
    <div class="forgot-password-container">
        <img src="~/image/organic-logo.png" class="organic-logo" alt="Organic Store Logo">
        <h2>Forgot Password</h2>
        <p>Enter your email address below and we will send you a link to reset your password.</p>
        <form asp-page="/Authen/ForgetPassword" asp-page-handler="sendemail" method="POST">
            <div class="mb-3">
                <input type="email" class="form-control" placeholder="Email Address" name="email" required>
            </div>
            <button type="submit" class="btn">Send Reset Link</button>
        </form>
        <a href="/login" class="back-to-login"><i class="fas fa-arrow-left"></i> Back to Login</a>
    </div>
</body>